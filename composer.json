{
    "name": "acwpd/vampire-points",
    "type": "project",
    "description": "Project wrapping VampirePoints website",
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "authors": [{
        "name": "Aaron C",
        "email": "aaron@acwpd.com"
    }],
    "require": {
        "slim/slim": "^3.9",
        "monolog/monolog": "^1.23",
        "slim/php-view": "^2.2",
        "kreait/firebase-php": "4.0"
    },
    "autoload": {
        "psr-4": {
            "ACWPD\\Vampire\\": "acwpd/vampire/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "start": "php -S 127.0.0.1:8080 public/index.php",
        "test": "phpunit"
    }
}